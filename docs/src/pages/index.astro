---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/Hero.astro";

import site from "../data/site.json";

const title =
  "DiceDB - an in-memory, real-time, and reactive database with Redis and SQL support optimized for modern hardware and building real-time applications.";
const description =
  "DiceDB is an in-memory, real-time, and reactive database with Redis and SQL support optimized for modern hardware and building real-time applications.";
---

<Layout {title} {description}>
  <Hero />
  <div class="section" style="margin: 3em 0;">
    <div class="columns is-multiline">
      {
        site.featureHighlights.map((s) => (
          <div class="column is-4">
            <div class="box">
              <h2 class="title is-size-5">{s.title}</h2>
              <p class="is-size-6">{s.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
  <div
    class="section box"
    style="
      margin: 5em 0;
      padding: 5em !important;"
  >
    <div class="columns is-centered">
      <div class="column is-10 has-text-centered">
        <h1 class="title is-size-2">
          Still thinking if DiceDB is the right fit?
        </h1>
        <h3 class="subtitle is-size-5">
          If you want to know more, you can always block our calendars; always
          up for a chat.
        </h3>
        <div class="buttons is-centered">
          <a
            href={site.calendar_url}
            target="_blank"
            class="button is-primary is-large"
          >
            <strong>Get in touch</strong>
          </a>
        </div>
      </div>
    </div>
  </div>
</Layout>
